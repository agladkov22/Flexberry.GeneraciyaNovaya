<h3 class="ui header">{{t "forms.i-i-s-generaciya-novaya-тех-карты-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.номерКарты
      class=(if (v-get validationModel "номерКарты" "isInvalid") "error")
      label=(t "forms.i-i-s-generaciya-novaya-тех-карты-e.номерКарты-caption")
      data-test-i-i-s-generaciya-novaya-тех-карты-e-номерКарты=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "номерКарты" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-generaciya-novaya-тех-карты-e.дата-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.дата
      class=(if (v-get validationModel "дата" "isInvalid") "error")
      data-test-i-i-s-generaciya-novaya-тех-карты-e-дата=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "дата" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-generaciya-novaya-тех-карты-e.чертежи-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.чертежи
      displayAttributeName="наименЧертеж"
      autocomplete=true
      relationName="чертежи"
      projection="ЧертежиL"
      title=(t "forms.i-i-s-generaciya-novaya-тех-карты-e.чертежи-caption")
      readonly=readonly
      componentName="чертежиLookup"
      class=(if (v-get validationModel "чертежи" "isInvalid") "error")
      data-test-i-i-s-generaciya-novaya-тех-карты-e-чертежи=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "чертежи" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-generaciya-novaya-тех-карты-e.тЧТехКарты-caption"}}</label>
    {{flexberry-groupedit
      componentName="тЧТехКартыGroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.тЧТехКарты
      content=model.тЧТехКарты
      readonly=readonly
      orderable=false
      class=(if (v-get validationModel "тЧТехКарты" "isInvalid") "error")
      data-test-i-i-s-generaciya-novaya-тех-карты-e-тЧТехКарты=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "тЧТехКарты" "message")}}
  </div>
</form>
